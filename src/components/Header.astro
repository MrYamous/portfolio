---
import { GithubIcon, LinkedinIcon } from "./icons/index.astro";
---

<header
  class="
    sticky top-0 z-50
    border-b border-slate-700
    bg-linear-to-br from-slate-900 via-slate-900 to-indigo-950
  "
>
  <div
    class="
      max-w-6xl mx-auto
      px-6 py-4
      flex items-center justify-between
    "
  >
    <div class="flex items-center gap-3">
      <span class="text-lg font-semibold text-slate-100">
        Matthieu Lempereur
      </span>

      <span class="hidden sm:inline text-sm text-slate-400">
        Développeur back-end — Contributeur open source
      </span>
    </div>

    <nav class="flex items-center gap-5">
      <a
        href="https://github.com/MrYamous"
        target="_blank"
        rel="noopener"
        class="
          text-slate-400
          hover:text-white
          transition-colors
        "
        aria-label="GitHub"
      >
        <GithubIcon />
      </a>

      <a
        href="https://www.linkedin.com/in/matthieu-lempereur/"
        target="_blank"
        rel="noopener"
        class="
          text-slate-400
          hover:text-white
          transition-colors
        "
        aria-label="LinkedIn"
      >
        <LinkedinIcon />
      </a>
    </nav>
  </div>
</header>
